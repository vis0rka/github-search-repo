{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "nursery": {
        "useExhaustiveDependencies": "warn",
        "noEmptyInterface": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentSize": 4
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingComma": "all",
      "quoteStyle": "single"
    }
  }
}